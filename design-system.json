{
  "designSystemProfile": {
    "name": "Focused Motivation",
    "version": "1.0.0",
    "description": "A design system focused on clarity, simplicity, and motivational feedback for an AI-powered food tracking app. The core principle is a minimalist UI punctuated by energetic, rewarding feedback.",
    "global": {
      "spacingUnit": 8,
      "pageMargins": {
        "horizontal": 20
      },
      "notes": [
        "All spacing and element sizes should be multiples of the spacingUnit (8pt)."
      ]
    },
    "colorPalettes": {
      "light": {
        "accent": "#FF7A5A",
        "primaryBackground": "#F9F9F9",
        "secondaryBackground": "#FFFFFF",
        "primaryText": "#111111",
        "secondaryText": "#8A8A8E",
        "border": "#EAEAEA",
        "white": "#FFFFFF",
        "disabledBackground": "rgba(17, 17, 17, 0.1)",
        "disabledText": "rgba(17, 17, 17, 0.4)"
      },
      "dark": {
        "accent": "#FF7A5A",
        "primaryBackground": "#000000",
        "secondaryBackground": "#1C1C1E",
        "primaryText": "#F2F2F7",
        "secondaryText": "#8D8D93",
        "border": "#38383A",
        "white": "#FFFFFF",
        "disabledBackground": "rgba(242, 242, 247, 0.15)",
        "disabledText": "rgba(242, 242, 247, 0.4)"
      }
    },
    "typography": {
      "fontFamily": "Nunito",
      "scale": [
        {
          "role": "Title1",
          "fontWeight": "Bold",
          "fontSize": 28,
          "useCase": "Main dashboard greeting",
          "colorContext": "primaryText"
        },
        {
          "role": "Title2",
          "fontWeight": "Bold",
          "fontSize": 22,
          "useCase": "Screen titles",
          "colorContext": "primaryText"
        },
        {
          "role": "Headline",
          "fontWeight": "SemiBold",
          "fontSize": 17,
          "useCase": "Card titles, key metrics",
          "colorContext": "primaryText"
        },
        {
          "role": "Body",
          "fontWeight": "Regular",
          "fontSize": 17,
          "useCase": "Main text, descriptions",
          "colorContext": "primaryText"
        },
        {
          "role": "Subhead",
          "fontWeight": "Regular",
          "fontSize": 15,
          "useCase": "Secondary info, list items",
          "colorContext": "secondaryText"
        },
        {
          "role": "Caption",
          "fontWeight": "Regular",
          "fontSize": 13,
          "useCase": "Timestamps, small annotations",
          "colorContext": "secondaryText"
        },
        {
          "role": "Button",
          "fontWeight": "Bold",
          "fontSize": 17,
          "useCase": "Button labels",
          "colorContext": "Defined within button component"
        }
      ]
    },
    "iconography": {
      "system": "Apple SF Symbols (or equivalent clean, line-based icon set)",
      "defaultState": {
        "style": "line-based",
        "weight": "Regular or SemiBold to match text",
        "colorContext": "primaryText or secondaryText depending on context"
      },
      "activeState": {
        "style": "filled",
        "colorContext": "accent",
        "useCase": "Used for selected tabs or primary interactive icons."
      },
      "rules": [
        "DO NOT use the accent color unless the icon represents a primary action or a selected state.",
        "DO NOT place icons within colored container backgrounds unless specified by a component (e.g., AI Action Target).",
        "DO NOT use gradients for icon fills."
      ]
    },
    "components": {
      "cards": {
        "cornerRadius": 16,
        "lightMode": {
          "background": {
            "type": "solid",
            "color": "secondaryBackground (#FFFFFF)"
          },
          "shadow": {
            "x": 0,
            "y": 4,
            "blur": 12,
            "color": "rgba(0, 0, 0, 0.05)"
          },
          "border": {
            "width": 0,
            "color": "none"
          }
        },
        "darkMode": {
          "background": {
            "type": "solid",
            "color": "secondaryBackground (#1C1C1E)"
          },
          "shadow": "none",
          "border": {
            "width": 0,
            "color": "none"
          }
        },
        "rules": [
          "DO NOT apply gradients to card backgrounds.",
          "DO NOT apply shadows in Dark Mode.",
          "DO NOT use borders on cards."
        ]
      },
      "buttons": {
        "primary": {
          "cornerRadius": 12,
          "states": {
            "default": {
              "background": {
                "type": "solid",
                "color": "accent (#FF7A5A)"
              },
              "textColor": "white (#FFFFFF)",
              "border": "none"
            },
            "active": {
              "background": {
                "type": "solid",
                "color": "#E06A4F"
              },
              "textColor": "white (#FFFFFF)"
            },
            "disabled": {
              "background": {
                "type": "solid",
                "colorContext": "disabledBackground"
              },
              "textColor": "disabledText"
            }
          }
        },
        "secondary": {
          "cornerRadius": 12,
          "states": {
            "default": {
              "background": {
                "type": "solid",
                "color": "transparent"
              },
              "textColor": "accent (#FF7A5A)",
              "border": {
                "width": 1.5,
                "color": "accent (#FF7A5A)"
              }
            },
            "active": {
              "background": {
                "type": "solid",
                "color": "rgba(255, 122, 90, 0.1)"
              },
              "textColor": "accent (#FF7A5A)",
              "border": {
                "width": 1.5,
                "color": "accent (#FF7A5A)"
              }
            },
            "disabled": {
              "background": {
                "type": "solid",
                "color": "transparent"
              },
              "textColor": "disabledText",
              "border": {
                "width": 1.5,
                "colorContext": "disabledBackground"
              }
            }
          }
        },
        "rules": [
          "DO NOT apply shadows to any button.",
          "DO NOT use 'primaryText' or 'secondaryText' colors for button labels; use the explicitly defined text colors."
        ]
      },
      "aiActionTargets": {
        "description": "The large, clear tap targets for Camera, Voice, and Text input.",
        "style": "Inherits from Primary Button styling but with a larger size and potentially an icon.",
        "size": {
          "height": 56,
          "minWidth": 120
        },
        "icon": {
          "color": "white (#FFFFFF)",
          "size": 24
        }
      },
      "progressBars": {
        "height": 8,
        "cornerRadius": 4,
        "trackColorContext": "disabledBackground",
        "fillColorContext": "accent"
      },
      "charts": {
        "style": "Clean bar or line charts.",
        "primaryDataSeriesColorContext": "accent",
        "secondaryDataSeriesColorContext": "secondaryText",
        "axisLabelColorContext": "secondaryText"
      }
    },
    "animations": {
      "library": "react-native-reanimated",
      "defaultTransition": {
        "type": "withTiming",
        "duration": 300,
        "easing": "Easing.out(Easing.quad)"
      },
      "motivationalMoments": {
        "logSuccess": {
          "target": "ProgressBar fill",
          "description": "Animate the width of the fill from its previous value to the new value.",
          "config": {
            "type": "withTiming",
            "duration": 500,
            "easing": "Easing.bezier(0.25, 1, 0.5, 1)"
          },
          "haptics": {
            "type": "Impact",
            "style": "Light"
          }
        },
        "goalCompletion": {
          "target": "The specific metric or progress bar that was completed.",
          "description": "A subtle, non-blocking shimmer or particle effect.",
          "shimmerEffect": {
            "implementation": "Animate a linear gradient with transparent and semi-transparent accent colors across the component.",
            "duration": 1000,
            "easing": "Easing.linear",
            "gradient": [
              "transparent",
              "rgba(255, 122, 90, 0.4)",
              "transparent"
            ]
          }
        }
      }
    }
  }
}
