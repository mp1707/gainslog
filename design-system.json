{
  "designSystemName": "RetroPixel",
  "description": "A design system based on a retro, pixel-art aesthetic with sharp corners, pixel fonts, and a dark theme. It utilizes gradients for highlights and specific color-coded states.",
  "colorPalette": {
    "background": {
      "primary": "#1D1C1C",
      "component": "#2A2A2A"
    },
    "text": {
      "primary": "#D8D8D8",
      "accent": "#E5B000"
    },
    "border": {
      "primary": "#414141",
      "secondary": "#606060"
    },
    "accent": {
      "primary": "#E5B000"
    },
    "semantic": {
      "info": {
        "border": "#00A7A7",
        "background": "#3C4A4A",
        "gradient": "linear-gradient(45deg, #00A7A7 0%, #006868 100%)"
      },
      "success": {
        "border": "#74A700",
        "background": "#3C4A3C",
        "gradient": "linear-gradient(45deg, #74A700 0%, #486800 100%)"
      },
      "warning": {
        "border": "#E5B000",
        "background": "#4A3C4B",
        "gradient": "linear-gradient(45deg, #E5B000 0%, #7F6000 100%)"
      }
    },
    "decorativeGradients": {
      "yellowGreen": "linear-gradient(135deg, #C6EF3E 0%, #79D45E 100%)",
      "orangeRed": "linear-gradient(135deg, #F89B2B 0%, #E65A5A 100%)",
      "bluePurple": "linear-gradient(135deg, #3F88C5 0%, #A77AC7 100%)",
      "lightBluePurple": "linear-gradient(135deg, #5BC0EB 0%, #C792EA 100%)"
    },
    "progressBar": {
      "background": "#3D2D41",
      "fill": "#7B4783",
      "border": "#AB62B7"
    }
  },
  "typography": {
    "fontFamily": "'PixelFont', 'Press Start 2P', monospace",
    "baseSize": "16px",
    "styles": {
      "cardTitle": {
        "font-size": "1em",
        "font-weight": "normal",
        "text-transform": "uppercase",
        "color": "#D8D8D8"
      },
      "cardDetail": {
        "font-size": "0.9em",
        "font-weight": "normal",
        "text-transform": "uppercase",
        "color": "#D8D8D8"
      },
      "buttonText": {
        "font-size": "1em",
        "font-weight": "normal",
        "text-transform": "uppercase",
        "color": "#E5B000"
      }
    }
  },
  "elementStyling": {
    "page": {
      "background": {
        "type": "solid",
        "color": "#1D1C1C",
        "description": "Main background for all screens."
      }
    },
    "cards": {
      "container": {
        "background": "#2A2A2A",
        "border": "2px solid #414141",
        "borderRadius": "0px",
        "shadow": "none",
        "padding": "16px"
      },
      "title": {
        "style": "cardTitle",
        "color": "#D8D8D8"
      },
      "content": {
        "style": "cardDetail",
        "color": "#D8D8D8"
      }
    },
    "buttons": {
      "primary": {
        "context": "Main call-to-action, e.g., 'Food Log'",
        "default": {
          "background": "#2A2A2A",
          "border": "2px solid #E5B000",
          "text": "#E5B000",
          "icon": "#E5B000",
          "borderRadius": "0px"
        },
        "hover": {
          "background": "#E5B000",
          "border": "2px solid #E5B000",
          "text": "#2A2A2A",
          "icon": "#2A2A2A"
        }
      },
      "secondary": {
        "context": "Icon-only buttons, e.g., 'Settings', 'History'",
        "default": {
          "background": "#2A2A2A",
          "border": "2px solid #606060",
          "icon": "#606060",
          "borderRadius": "0px"
        },
        "hover": {
          "background": "#606060",
          "border": "2px solid #606060",
          "icon": "#2A2A2A"
        }
      }
    },
    "gauges": {
      "progressBar": {
        "context": "Global status bars, e.g., daily calorie total",
        "container": {
          "background": "#3D2D41",
          "border": "2px solid #AB62B7",
          "height": "20px",
          "borderRadius": "0px"
        },
        "fill": {
          "background": "#7B4783"
        }
      },
      "percentageGauge": {
        "context": "Semantic gauges inside cards",
        "container": {
          "background": "Varies by semantic color (e.g., success.background)",
          "border": "2px solid (Varies by semantic color, e.g., success.border)",
          "borderRadius": "0px",
          "padding": "4px 8px"
        },
        "text": {
          "background": "(Varies by semantic color's gradient, e.g., success.gradient)",
          "background-clip": "text",
          "-webkit-background-clip": "text",
          "color": "transparent",
          "font-size": "1.2em"
        }
      }
    },
    "icons": {
      "decorative": {
        "context": "Hero/branding icons as seen in the first image.",
        "style": "pixel-art",
        "fill": {
          "type": "gradient",
          "value": "One of the decorativeGradients"
        },
        "background": "none",
        "border": "none"
      },
      "ui": {
        "context": "Icons used within UI components like buttons.",
        "style": "pixel-art",
        "fill": {
          "type": "solid",
          "value": "Inherits color from parent component (e.g., button.secondary.icon)"
        },
        "background": "none",
        "border": "none"
      }
    }
  },
  "rules": {
    "doNot": [
      "DO NOT use border-radius on any element. All corners must be sharp.",
      "DO NOT apply shadows to any element. The design is flat.",
      "DO NOT apply decorative gradients to UI icon fills. UI icons must be solid-colored.",
      "DO NOT use card background colors on button backgrounds.",
      "DO NOT use anti-aliasing on fonts or icons; a crisp, pixelated look is required."
    ]
  }
}
