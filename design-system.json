{
  "designSystemProfile": {
    "name": "Focused Motivation",
    "version": "1.2.0",
    "description": "A design system focused on clarity and motivational feedback. It uses a primary accent for actions and a semantic color palette for at-a-glance understanding of nutritional data.",
    "global": {
      "spacingUnit": 8,
      "pageMargins": {
        "horizontal": 20
      },
      "notes": [
        "All spacing and element sizes should be multiples of the spacingUnit (8pt)."
      ]
    },
    "colorPalettes": {
      "light": {
        "accent": "#8A3FFC",
        "primaryBackground": "#F9F9F9",
        "secondaryBackground": "#FFFFFF",
        "primaryText": "#111111",
        "secondaryText": "#8A8A8E",
        "border": "#EAEAEA",
        "white": "#FFFFFF",
        "disabledBackground": "rgba(17, 17, 17, 0.1)",
        "disabledText": "rgba(17, 17, 17, 0.4)",
        "semantic": {
          "calories": "#34C759",
          "protein": "#0A84FF",
          "carbs": "#FF9F0A",
          "fat": "#FFD60A"
        },
        "semanticBadges": {
          "calories": {
            "background": "rgba(52, 199, 89, 0.15)",
            "text": "#34C759"
          },
          "protein": {
            "background": "rgba(10, 132, 255, 0.15)",
            "text": "#0A84FF"
          },
          "carbs": {
            "background": "rgba(255, 159, 10, 0.15)",
            "text": "#FF9F0A"
          },
          "fat": {
            "background": "rgba(255, 214, 10, 0.15)",
            "text": "#FFD60A"
          }
        },
        "iconBadges": {
          "background": "rgba(138, 63, 252, 0.15)",
          "iconColor": "#8A3FFC"
        }
      },
      "dark": {
        "accent": "#9E66FF",
        "primaryBackground": "#000000",
        "secondaryBackground": "#1C1C1E",
        "primaryText": "#F2F2F7",
        "secondaryText": "#8D8D93",
        "border": "#38383A",
        "white": "#FFFFFF",
        "disabledBackground": "rgba(242, 242, 247, 0.15)",
        "disabledText": "rgba(242, 242, 247, 0.4)",
        "semantic": {
          "calories": "#32D74B",
          "protein": "#0B84FF",
          "carbs": "#FF9500",
          "fat": "#FFCC0A"
        },
        "semanticBadges": {
          "calories": {
            "background": "rgba(50, 215, 75, 0.15)",
            "text": "#32D74B"
          },
          "protein": {
            "background": "rgba(11, 132, 255, 0.15)",
            "text": "#0B84FF"
          },
          "carbs": {
            "background": "rgba(255, 149, 0, 0.15)",
            "text": "#FF9500"
          },
          "fat": {
            "background": "rgba(255, 204, 10, 0.15)",
            "text": "#FFCC0A"
          }
        },
        "iconBadges": {
          "background": "rgba(158, 102, 255, 0.15)",
          "iconColor": "#9E66FF"
        }
      }
    },
    "typography": {
      "fontFamily": "Nunito",
      "scale": [
        {
          "role": "Title1",
          "fontWeight": "Bold",
          "fontSize": 28,
          "useCase": "Main dashboard greeting",
          "colorContext": "primaryText"
        },
        {
          "role": "Title2",
          "fontWeight": "Bold",
          "fontSize": 22,
          "useCase": "Screen titles",
          "colorContext": "primaryText"
        },
        {
          "role": "Headline",
          "fontWeight": "SemiBold",
          "fontSize": 17,
          "useCase": "Card titles, key metrics",
          "colorContext": "primaryText"
        },
        {
          "role": "Body",
          "fontWeight": "Regular",
          "fontSize": 17,
          "useCase": "Main text, descriptions",
          "colorContext": "primaryText"
        },
        {
          "role": "Subhead",
          "fontWeight": "Regular",
          "fontSize": 15,
          "useCase": "Secondary info, list items",
          "colorContext": "secondaryText"
        },
        {
          "role": "Caption",
          "fontWeight": "Regular",
          "fontSize": 13,
          "useCase": "Timestamps, small annotations",
          "colorContext": "secondaryText"
        },
        {
          "role": "Button",
          "fontWeight": "Bold",
          "fontSize": 17,
          "useCase": "Button labels",
          "colorContext": "Defined within button component"
        }
      ]
    },
    "iconography": {
      "system": "Phosphor Icons",
      "implementation": "Use the 'phosphor-react-native' library.",
      "defaultState": {
        "weight": "Regular",
        "colorContext": "primaryText or secondaryText depending on context"
      },
      "activeState": {
        "weight": "Fill",
        "colorContext": "accent",
        "useCase": "Used for selected tabs or primary interactive icons."
      },
      "rules": [
        "DO NOT use the accent color unless the icon represents a primary action or a selected state.",
        "DO NOT use semantic colors for general iconography; they are reserved for data visualization.",
        "DO NOT place icons within colored container backgrounds unless specified by a component (e.g., AI Action Target).",
        "DO NOT use gradients for icon fills."
      ]
    },
    "components": {
      "cards": {
        "cornerRadius": 16,
        "lightMode": {
          "background": {
            "type": "solid",
            "color": "secondaryBackground (#FFFFFF)"
          },
          "shadow": {
            "x": 0,
            "y": 4,
            "blur": 12,
            "color": "rgba(0, 0, 0, 0.05)"
          },
          "border": { "width": 0, "color": "none" }
        },
        "darkMode": {
          "background": {
            "type": "solid",
            "color": "secondaryBackground (#1C1C1E)"
          },
          "shadow": "none",
          "border": { "width": 0, "color": "none" }
        },
        "rules": [
          "DO NOT apply gradients to card backgrounds.",
          "DO NOT apply shadows in Dark Mode.",
          "DO NOT use borders on cards."
        ]
      },
      "buttons": {
        "primary": {
          "cornerRadius": 12,
          "states": {
            "default": {
              "background": { "type": "solid", "colorContext": "accent" },
              "textColor": "white (#FFFFFF)",
              "border": "none"
            },
            "active": {
              "background": { "type": "solid", "color": "#6929CC" },
              "textColor": "white (#FFFFFF)"
            },
            "disabled": {
              "background": {
                "type": "solid",
                "colorContext": "disabledBackground"
              },
              "textColor": "disabledText"
            }
          }
        },
        "secondary": {
          "cornerRadius": 12,
          "states": {
            "default": {
              "background": { "type": "solid", "color": "transparent" },
              "textColor": "accent",
              "border": { "width": 1.5, "colorContext": "accent" }
            },
            "active": {
              "background": {
                "type": "solid",
                "color": "rgba(138, 63, 252, 0.1)"
              },
              "textColor": "accent",
              "border": { "width": 1.5, "colorContext": "accent" }
            },
            "disabled": {
              "background": { "type": "solid", "color": "transparent" },
              "textColor": "disabledText",
              "border": { "width": 1.5, "colorContext": "disabledBackground" }
            }
          }
        },
        "rules": [
          "DO NOT apply shadows to any button.",
          "DO NOT use 'primaryText' or 'secondaryText' colors for button labels; use the explicitly defined text colors."
        ]
      },
      "aiActionTargets": {
        "description": "The large, clear tap targets for Camera, Voice, and Text input.",
        "style": "Inherits from Primary Button styling but with a larger size and an icon.",
        "size": { "height": 56, "minWidth": 120 },
        "icon": { "color": "white (#FFFFFF)", "size": 24 }
      },
      "progressBars": {
        "height": 8,
        "cornerRadius": 4,
        "trackColorContext": "disabledBackground",
        "fillColorContext": "Use the corresponding semantic color (e.g., 'semantic.protein' for the protein bar)."
      },
      "charts": {
        "style": "Clean bar or line charts.",
        "primaryDataSeriesColorContext": "Use the corresponding semantic color for each data series.",
        "secondaryDataSeriesColorContext": "secondaryText",
        "axisLabelColorContext": "secondaryText"
      }
    },
    "animations": {
      "library": "react-native-reanimated",
      "defaultTransition": {
        "type": "withTiming",
        "duration": 300,
        "easing": "Easing.out(Easing.quad)"
      },
      "motivationalMoments": {
        "logSuccess": {
          "target": "ProgressBar fill",
          "description": "Animate the width of the fill from its previous value to the new value.",
          "config": {
            "type": "withTiming",
            "duration": 500,
            "easing": "Easing.bezier(0.25, 1, 0.5, 1)"
          },
          "haptics": { "type": "Impact", "style": "Light" }
        },
        "goalCompletion": {
          "target": "The specific metric or progress bar that was completed.",
          "description": "A subtle, non-blocking shimmer or particle effect using the completed metric's semantic color.",
          "shimmerEffect": {
            "implementation": "Animate a linear gradient with transparent and semi-transparent versions of the relevant semantic color across the component.",
            "duration": 1000,
            "easing": "Easing.linear",
            "gradient": [
              "transparent",
              "rgba(of-the-semantic-color, 0.4)",
              "transparent"
            ]
          }
        }
      }
    }
  }
}
