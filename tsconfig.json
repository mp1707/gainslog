{
  // Updated to fix "@/" import path resolution
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/app-providers/*": ["src/app-providers/*"],
      "@/app-providers": ["src/app-providers/index"],
      "@/features/*": ["src/features/*"],
      "@/features": ["src/features/index"],
      "@/shared/*": ["src/shared/*"],
      "@/shared": ["src/shared/index"],
      "@/theme/*": ["src/theme/*"],
      "@/theme": ["src/theme/index"],
      "@/types/*": ["src/types/*"],
      "@/types": ["src/types/index"],
      "@/components/*": ["src/components/*"],
      "@/components": ["src/components/index"],
      "@/lib/*": ["src/lib/*"],
      "@/lib": ["src/lib/index"],
      "@/store/*": ["src/store/*"],
      "@/store": ["src/store/index"],
      "@/legacystore/*": ["src/legacystore/*"],
      "@/legacystore": ["src/legacystore/index"],
      "@/utils/*": ["src/utils/*"],
      "@/utils": ["src/utils/index"],
      "@/providers/*": ["src/providers/*"],
      "@/providers": ["src/providers/index"],
      "@/hooks/*": ["src/hooks/*"],
      "@/hooks": ["src/hooks/index"]
    }
  },
  "include": ["src/**/*", "app/**/*", "App.tsx", "index.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
